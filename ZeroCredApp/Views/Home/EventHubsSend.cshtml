@model ZeroCredApp.Models.EventHubMessage

@{
    ViewData["Title"] = "EventHubsSend";
}

<h1>EventHubsSend</h1>
@if (ViewBag.EventhubSuccess !=null)
{
    <h4>You message has been successfully posted. Try sending another</h4>
}
else
{
    <h4>EventHubMessage</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EventHubsSend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SendToEventHub" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

