@model ZeroCredApp.Models.ServicebusMessage

@{
    ViewData["Title"] = "ServiceBusSend";
}

<h1>ServiceBusSend</h1>
@if (ViewBag.ServicebusSuccess !=null)
{
    <h4>You message has been successfully posted. Try sending another</h4>
}
else
{
<h4>ServicebusMessage</h4>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ServiceBusSend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SendToServiceBus" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

